<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/boder"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="#3F51B5"
            android:gravity="center"
            android:text="任务详情"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_begin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:text="开始时间："
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_ddl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="截止时间："
            android:textColor="#000000"
            android:textSize="28sp"

            />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:text="作业状态："
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="作业要求："
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="(作业要求balabala)"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_pointNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:text="已批阅："
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_studentNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="学生数："
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_submitContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:text="作业内容："
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="作业反馈："
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_assignAttachmentNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="作业附件："
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_assignAttachment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="加油.pptx"
            android:textSize="28sp" />


    </LinearLayout>

</LinearLayout>